@model UsersStatisticsViewModel
@{
    ViewData["Title"] = "Statistics";
}
<div class="row">
    <div class="col-md-4 mt-3">
        <div class=" h-100 card bg-soft-info text-dark text-center justify-content-center">
            <h2>@Model.UsersCount.ToPersianNumbers("N0")</h2>
            <p class="text-muted">@Html.DisplayNameFor(m => m.UsersCount)</p>
        </div>
    </div> 
    <div class="col-md-8 mt-2">
        <div class="row">
            <div class="col-md-12 mt-2">
                <div class="card bg-soft-info text-dark text-center">
                    <h2>@Model.ConfirmedUsersCount.ToPersianNumbers("N0")</h2>
                    <p class="text-muted">@Html.DisplayNameFor(m => m.ConfirmedUsersCount)</p>
                </div>
            </div>
            <div class="col-md-6 mt-2">
                <div class="card bg-soft-info text-dark text-center">
                    <h2>@Model.ActiveUsersCount.ToPersianNumbers("N0")</h2>
                    <p class="text-muted">@Html.DisplayNameFor(m => m.ActiveUsersCount)</p>
                </div>
            </div> 
            <div class="col-md-6 mt-2">
                <div class="card bg-soft-info text-dark text-center">
                    <h2>@Model.ConfirmedEmailUsersCount.ToPersianNumbers("N0")</h2>
                    <p class="text-muted">@Html.DisplayNameFor(m => m.ConfirmedEmailUsersCount)</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 mt-3">
        <div class=" h-100 card bg-soft-info text-dark text-center justify-content-center">
            <h2>@Model.RegistrationLastThirtyDaysCount.ToPersianNumbers("N0")</h2>
            <p class="text-muted">@Html.DisplayNameFor(m => m.RegistrationLastThirtyDaysCount)</p>
        </div>
    </div> 
    <div class="col-md-6 mt-3">
        <div class=" h-100 card bg-soft-info text-dark text-center justify-content-center">
            <h2>@Model.RegistrationLastSevenDaysCount.ToPersianNumbers("N0")</h2>
            <p class="text-muted">@Html.DisplayNameFor(m => m.RegistrationLastSevenDaysCount)</p>
        </div>
    </div> 
    <div class="col-md-6 mt-3">
        <div class=" h-100 card bg-soft-info text-dark text-center justify-content-center">
            <h2>@Model.ExternalLogins.ToPersianNumbers("N0")</h2>
            <p class="text-muted">@Html.DisplayNameFor(m => m.ExternalLogins)</p>
        </div>
    </div> 
</div>
@section Scripts{
    <script>
        $('#ManageUsersStatistics').addClass('active');
    </script>
}
