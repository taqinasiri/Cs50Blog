@model Blog.ViewModels.Account.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}

<div class="container py-5">
    <div class="row mb-5">
        <div class="col-md-8 col-xl-6 text-center mx-auto">
            <p class="fw-bold text-success mb-2">Reset Password</p>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-md-6 col-xl-4">
            <div>
                <form class="p-3 p-xl-4" method="post" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                    <div asp-validation-summary="All"></div>
                    <input asp-for="Token" value="@ViewData["Token"]"/>
                    <div class="mb-3">
                        <input asp-for="Email" class="form-control">
                        <span asp-validation-for="Email" class="text-warning"></span>
                    </div>
                    <div class="mb-3">
                        <input asp-for="Password" class="form-control">
                        <span asp-validation-for="Password" class="text-warning"></span>
                    </div>
                    <div class="mb-3">
                        <input asp-for="ConfirmPassword" class="form-control">
                        <span asp-validation-for="ConfirmPassword" class="text-warning"></span>
                    </div>
                    <div><button class="btn btn-primary shadow d-block w-100" type="submit">Reset Password</button></div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
