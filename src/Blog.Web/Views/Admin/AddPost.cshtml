@model Blog.ViewModels.Post.AddPostViewModel

@{
    ViewData["Title"] = "Add Post";
}

<div class="container py-5">
    <div class="row mb-5">
        <div class="col-md-8 col-xl-6 text-center mx-auto">
            <p class="fw-bold text-success mb-2">Add Post</p>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-md-6 col-xl-4">
            <div>
                <form class="p-3 p-xl-4" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All"></div>
                    <div class="mb-3">
                        <input asp-for="Title" class="form-control">
                        <span asp-validation-for="Title" class="text-warning"></span>
                    </div>
                    <div class="mb-3">
                        <input asp-for="Cover" class="form-control">
                        <span asp-validation-for="Cover" class="text-warning"></span>
                    </div>
                    <div class="mb-3">
                        <textarea asp-for="Content" class="form-control" rows="10"></textarea>
                    </div>
                    <div><button class="btn btn-primary shadow d-block w-100" type="submit">Add</button></div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
