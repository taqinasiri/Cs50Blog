@model Blog.ViewModels.Post.EditPostViewModel

@{
    ViewData["Title"] = "Edit Post";
}

<div class="container py-5">
    <div class="row mb-5">
        <div class="col-md-8 col-xl-6 text-center mx-auto">
            <p class="fw-bold text-success mb-2">Edit Post</p>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-md-6 col-xl-4">
            <div>
                <form asp-action="EditPost" class="p-3 p-xl-4" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All"></div>
                    <input asp-for="Id"/>
                    <div class="mb-3">
                        <input asp-for="Title" class="form-control">
                        <span asp-validation-for="Title" class="text-warning"></span>
                    </div>
                    <div class="mb-3">
                        <input asp-for="Cover" class="form-control">
                        <span asp-validation-for="Cover" class="text-warning"></span>
                    </div>
                    <div class="mb-3">
                        <textarea asp-for="Content" class="form-control" rows="10"></textarea>
                    </div>
                    <div><button class="btn btn-primary shadow d-block w-100" type="submit">Edit</button></div>
                </form>
            </div>
        </div>
        <div class="col-md-6 colxl-4 mt-5">
            <img class="img-thumbnail form-control" src="/img/covers/@Model.ThisCover"/>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
