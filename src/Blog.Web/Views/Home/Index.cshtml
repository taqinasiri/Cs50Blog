@model IEnumerable<Blog.ViewModels.Post.ShowPostsViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<section class="py-5">
    <div class="container py-5">
        <div class="row mb-5">
            <div class="col-md-8 col-xl-6 text-center mx-auto">
                <h2 class="fw-bold">Blog</h2>
                <p class="text-muted">Welcome to blog</p>
            </div>
        </div>
        <div class="row row-cols-1 row-cols-md-2 mx-auto" style="max-width: 900px;">
            @foreach (var item in Model)
            {
                <div class="col mb-4">
                    <div>
                        <a asp-controller="Home" asp-action="Post" asp-route-id="@item.Id"><img class="rounded img-fluid shadow w-100 fit-cover" src="/img/covers/@item.Cover" style="height: 250px;"></a>
                        <div class="py-4">
                            <h4 class="fw-bold">@item.Title</h4>
                            <p class="text-muted">@item.PreviewContent</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
